

<%= form_tag("/coffeeblog/#{@post.id}/update") do %>

  
    <h1>
      編集する
    </h1>
    
    <h2>記事タイトルを編集</h2>
    <textarea name="title"><%= @post.title %></textarea>

    
    <h2>カテゴリを編集</h2>
        <textarea name="categoryy"><%= @post.categoryy %></textarea>
    
    <h2>タグを編集</h2>
       
       <textarea name="taga"><%= @post.taga %></textarea>
       <textarea name="tagb"><%= @post.tagb %></textarea>
       <textarea name="tagc"><%= @post.tagc %></textarea>
       <textarea name="tagd"><%= @post.tagd %></textarea>
       <textarea name="tage"><%= @post.tage %></textarea>
       <textarea name="tagf"><%= @post.tagf %></textarea>
       <textarea name="tagg"><%= @post.tagg %></textarea>
       <textarea name="tagh"><%= @post.tagh %></textarea>
       <textarea name="tagi"><%= @post.tagi %></textarea>


    <h2>本文を登録</h2>
    <textarea name="content" placeholder="記事を書いてください" rows="100" cols="100"><%= @post.content %></textarea>
    
     <input type="submit" value="終わる！">
  
  
<% end %>